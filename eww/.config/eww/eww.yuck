(defpoll time :interval "5s"
  `date +'{"hour":"%H","min":"%M"}'`)

(defwidget powermenu_layout []
  (label :text "${time.hour}:${time.min}:${time.sec}"))

(defwindow powermenu
  :monitor 0 ;; Optional for X11
  :stacking "fg"
  :windowtype "normal"
  :wm-ignore true
  :geometry (geometry
              :width "50%"
              :height "100%")
  (powermenu_layout))
